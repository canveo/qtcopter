<launch>
  <!-- default 9mm chameleon-->
  <arg name="lense" default="9mm" />
  <arg name="camera_serial" default="$(arg camera_serial)" />

  <group ns="camera">
    <node pkg="nodelet" type="nodelet" name="camera_nodelet_manager" args="manager" />

    <node pkg="nodelet" type="nodelet" name="camera_nodelet"
          args="load pointgrey_camera_driver/PointGreyCameraNodelet camera_nodelet_manager" >
      <param name="frame_id" value="camera" />
      <param name="serial" value="$(arg camera_serial)" />

      <!-- When unspecified, the driver will use the default framerate as given by the
           camera itself. Use this parameter to override that value for cameras capable of
           other framerates. -->
      <!-- maximum framerate -->
      <param name="frame_rate" value="18" />

      <!-- disable automatic exposure -->
      <param name="auto_exposure" value="false" />
      <param name="auto_shutter" value="false" />
      <param name="auto_gain" value="false" />

      <!-- we don't use this parameter -->
      <param name="exposure" value="0" />
      <!-- shutter is 10ms (1/100 s).
           This is a fine value for a person holding a camera in hands, to make
           the picture look sharp. However, on a quadcopter results may vary..
      -->
      <!-- the following setting don't work. we get 30ms shutter anyway -->
      <param name="shutter" value="0.005" />
      <!-- gain is what we change from area to another area -->
      <!-- TODO: How do we experimentally choose the value? -->
        <!-- medium lighted room -->>
        <param name="gain" value="20.0" />
      
      <!-- Use the camera_calibration package to create this file -->
      <param name="camera_info_url" value="file://$(find qtcopter)/config/ptgrey_$(arg camera_serial)_$(arg lense).yaml" />
    </node>

    <node pkg="nodelet" type="nodelet" name="image_proc_debayer"
          args="load image_proc/debayer camera_nodelet_manager">
    </node>
  </group>
</launch>
